{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": ["/(^|/)Dockerfile$/"],
            "matchStrings": [
                "go install (?<depName>[^@]+)@v(?<currentValue>\\S+)$"
            ],
            "datasourceTemplate": "golang"
        }
    ]
}
